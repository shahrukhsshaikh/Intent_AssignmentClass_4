<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndog"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Dog"
        app:layout_constraintBottom_toTopOf="@+id/btnelephant"
        app:layout_constraintLeft_toRightOf="@id/btncat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btncat"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Cat"
        app:layout_constraintBottom_toTopOf="@+id/btntiger"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btndog"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btntiger"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Tiger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnelephant"
        app:layout_constraintTop_toBottomOf="@+id/btncat" />

    <Button
        android:id="@+id/btnelephant"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Elephant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btntiger"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndog" />

</androidx.constraintlayout.widget.ConstraintLayout>